<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GuestListFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/contact_list_bottom_margin"
        android:layout_marginStart="@dimen/contact_list_left_margin"
        android:layout_marginLeft="@dimen/contact_list_left_margin"
        android:layout_marginEnd="@dimen/contact_list_right_margin"
        android:layout_marginRight="@dimen/contact_list_right_margin"
        android:layout_marginTop="@dimen/contact_list_top_margin"
        android:layout_weight="1" >
        
        <ExpandableListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ExpandableListView>

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/empty_list" />
    </FrameLayout>
    
     <FrameLayout
        android:id="@+id/LayoutGuestListAd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_banner_minwidth"
        android:background="@color/LightCyan" />

</LinearLayout>