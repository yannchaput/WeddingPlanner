<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Honeydew"
    android:orientation="horizontal"
    android:padding="@dimen/contact_list_padding" >
    
    <TextView
        android:id="@+id/lblTaskListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="@dimen/contact_list_item_paddingRight"
        android:paddingEnd="@dimen/contact_list_item_paddingRight"
        android:textColor="@color/Black"
        android:textSize="@dimen/contact_list_header_font_size" />
    <TextView
        android:id="@+id/lblCountTaskListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/Black"
        android:textSize="@dimen/contact_list_header_font_size" />
   
</LinearLayout>
